{
    "name": "ts-minimal-kit",
    "version": "0.1.2",
    "description": "",
    "type": "module",
    "main": "./dist/app.js",
    "scripts": {
        "dev": "npx tsc --watch",
        "build": "npx tsc --build",
        "start": "node ./dist/app.js",
        "build:start": "npm run build && npm run start",
        "clean": "node -e \"import('fs').then(fs => { fs.rmSync('dist', {recursive: true, force: true}); fs.rmSync('tsconfig.tsbuildinfo', {force: true}); })\"",
        "degit": "node -e \"import('fs').then(fs => fs.rmSync('.git', {recursive: true, force: true}))\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "typescript",
        "minimal",
        "esm"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "typescript": "*",
        "@types/node": "*"
    }
}
